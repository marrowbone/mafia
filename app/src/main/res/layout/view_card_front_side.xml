<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_front"
    android:layout_width="@dimen/card_field_width"
    android:layout_height="@dimen/card_field_height"
    android:layout_centerInParent="true"
    android:background="@color/gray_alfa">

    <ImageView
        android:id="@+id/card_frontside_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:src="@drawable/test_sherif" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/card_text_color"
        android:textSize="@dimen/very_big_text"
        app:fontFamily="@font/stylo_family" />
</RelativeLayout>
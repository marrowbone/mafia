<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/card_count_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:padding="7dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_above_card_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/in_you_deck"
            android:textColor="@color/card_count_color"
            android:textSize="@dimen/normal_text" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/card_count_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="10"
            android:textColor="@color/card_count_color"
            android:textSize="@dimen/big_text" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_below_card_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/cards"
            android:textColor="@color/card_count_color"
            android:textSize="@dimen/normal_text" />
    </LinearLayout>

    <com.morrowbone.mafiacards.app.views.NonSwipeableViewPager
        android:id="@+id/pager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />
</RelativeLayout>



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/listview"
        android:layout_below="@+id/card_count_layout"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:layout_above="@+id/save_btn"
        android:listSelector="@android:color/transparent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/save_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fontFamily="@font/stylo_family"
        android:layout_alignParentBottom="true"
        android:paddingTop="10dp"
        android:text="@string/play"
        android:textSize="@dimen/big_text" />

    <LinearLayout
        android:id="@+id/card_count_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="7dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_above_card_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontFamily="@font/stylo_family"
            android:gravity="center"
            android:text="@string/in_you_deck"
            android:textColor="@color/card_count_color"
            android:textSize="@dimen/normal_text" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/card_count_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontFamily="@font/stylo_family"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="10"
            android:textColor="@color/card_count_color"
            android:textSize="@dimen/big_text" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_below_card_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:fontFamily="@font/stylo_family"
            android:gravity="center"
            android:text="@string/cards"
            android:textColor="@color/card_count_color"
            android:textSize="@dimen/normal_text" />
    </LinearLayout>

</RelativeLayout>
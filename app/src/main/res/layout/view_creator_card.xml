<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="7dp"
    android:paddingRight="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_alfa_2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_title_layout"
            android:layout_toEndOf="@+id/card_image"
            android:layoutDirection="ltr"
            android:gravity="center_vertical">

        <ImageView
                android:id="@+id/decrement"
                android:padding="5dp"
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:src="@drawable/arrow_decrement" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/card_count"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="0"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/big_text"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/increment"
                android:padding="5dp"
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:src="@drawable/arrow_increment" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toEndOf="@+id/card_image">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/card_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@android:color/white"
                android:textSize="@dimen/big_text"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/editIcon"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/role_civilian"
                android:layout_marginStart="10dp" />

            <ImageView
                android:id="@+id/editIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="start|center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_edit_black_24dp"
                android:tint="@color/card_text_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/card_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/card_image"
            android:layout_width="75dp"
            android:layout_height="100dp"
            tools:src="@drawable/civilian_cr" />
    </RelativeLayout>

</LinearLayout>
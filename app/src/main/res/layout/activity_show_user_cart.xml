<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.morrowbone.mafiacards.app.activity.ShowUserCartActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/city_ver2_law_quality" />

    <LinearLayout
        android:id="@+id/card_count_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:padding="7dp">

        <TextView
            android:id="@+id/text_above_card_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/in_you_deck"
            android:textColor="@color/red"
            android:textSize="@dimen/normal_text" />

        <TextView
            android:id="@+id/card_count_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="10"
            android:textColor="@color/red"
            android:textSize="@dimen/big_text" />

        <TextView
            android:id="@+id/text_below_card_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/cards"

            android:textColor="@color/red"
            android:textSize="@dimen/normal_text" />
    </LinearLayout>

    <com.morrowbone.mafiacards.app.views.NonSwipeableViewPager
        android:id="@+id/pager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <FrameLayout
        android:id="@+id/layout_for_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"></FrameLayout>


</RelativeLayout>



<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.morrowbone.mafiacards.app" >

    <application
        android:name=".application.MafiaApp"
        android:allowBackup="true"
        android:icon="@drawable/don_launcher_xh"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.RulesActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activity.ShowUserCartActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/role_mafia" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.CreatorActivity"
            android:windowSoftInputMode="stateHidden"
            android:label="@string/title_activity_creator" >
        </activity>
    </application>

</manifest>
